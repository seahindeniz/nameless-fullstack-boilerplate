{
  "name": "@nameless-fullstack-boilerplate/backend",
  "version": "0.0.1",
  "description": "Back-end app for the nameless boiler project",
  "author": "Sahin Deniz <seahindeniz@gmail.com> (https://github.com/seahindeniz)",
  "private": true,
  "repository": "github:seahindeniz/nameless-fullstack-boilerplate",
  "license": "MIT",
  "main": "src/server.ts",
  "engines": {
    "node": ">=12.22.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.prod.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "db": "docker-compose -f ../../docker-compose.yml up -d --build mongodb",
    "dev": "pnpm db && nodemon",
    "generateSchema": "ts-node scripts/generateJSONSchema.ts",
    "-": "",
    "test": "pnpm generateSchema && jest",
    "test:ci": "jest",
    "test:watch": "pnpm test -- --watch",
    "test:watchAll": "pnpm test -- --watchAll",
    "--": "",
    "lint": "pnpm generateSchema && pnpm _lint",
    "_lint": "eslint {src,test,config}/**/*.{js,ts}",
    "lint:ci": "pnpm _lint -- --quiet",
    "lint:fix": "pnpm lint -- --fix",
    "---": "",
    "dock": "docker-compose up -d --build",
    "make-lock": "make-dedicated-lockfile"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.3",
    "@typegoose/typegoose": "^8.0.0-beta.21",
    "class-validator": "^0.13.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "fastify": "^3.18.1",
    "fastify-swagger": "^4.8.2",
    "fastify-websocket": "^3.2.0",
    "graphql": "^15.5.1",
    "mercurius": "^7.9.1",
    "mongoose": "^5.13.1",
    "rimraf": "^3.0.2",
    "type-graphql": "^1.1.1",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@pnpm/make-dedicated-lockfile": "^0.2.12",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@types/ws": "^7.4.6",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "get-port": "^5.1.1",
    "glob-promise": "^4.2.0",
    "jest": "^27.0.6",
    "mercurius-codegen": "^1.6.1",
    "mockingoose": "^2.15.2",
    "mongodb-memory-server": "^7.0.0",
    "nodemon": "^2.0.9",
    "pino-pretty": "^5.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-json-schema-generator": "^0.93.0",
    "ts-node": "^10.0.0",
    "ws": "^7.5.1"
  }
}
